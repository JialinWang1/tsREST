{
  "compilerOptions": {
    "outDir": "build",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@controller/*": ["src/controller/*"],
      "@middlerware/*": ["src/middlerware/*"],
      "@service/*": ["src/service/*"]
    }
  },
  "include": ["src/**/*"]
}
